{
	"name": "germania-kg/psrcontainerfactory",
	"description": "Factory callable that creates and returns a Pimple PSR-11 Container",

	"license": "MIT",

	"authors": [
		{
			"name": "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role": "Developer"
		}
	],

	"autoload": {
		"psr-4": {
			"Germania\\PsrContainerFactory\\": "src/"
		}
	},

  "autoload-dev": {
      "psr-4": { "tests\\": "tests/src" }
  },

  "require": {
  	"php": "^5.6|^7.0",
  	"pimple/pimple": "^3.0",
  	"psr/container": "^1.0"
  },

    "require-dev": {
        "php-coveralls/php-coveralls": "^2.0",
        "phpunit/phpunit": "^5.7|^6.0|^7.0|^8.0"
    },

    "scripts": {
          "phpunit": "phpunit",

          "test": [
              "@phpunit"
          ]
    }
}
